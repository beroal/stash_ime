<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ua.in.beroal.stash_ime.test.TestActivity">
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"/>
    <Button
        android:id="@+id/im_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IM settings"/>
    <Button
        android:id="@+id/subtype_enabler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subtype enabler"/>

    <Button
        android:id="@+id/add_subtypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add subtypes"/>
    <Button
        android:id="@+id/delete_subtypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete subtypes"/>
    <Button
        android:id="@+id/reset_non_first_run_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset non first run flag and exit"/>
</LinearLayout>